{
  "name": "storybook-rsbuild-monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm --filter \"./packages/*\" run build",
    "build:sandboxes": "pnpm --filter \"./sandboxes/*\" run build:storybook",
    "bump": "bumpp",
    "check": "pnpm --parallel --filter \"./packages/**\" run check",
    "check-dependency-version": "pnpm tsx ./scripts/check-dependency-version.mts",
    "dev": "pnpm --parallel --filter \"./packages/**\" run prep --watch",
    "e2e": "pnpm exec playwright test --config e2e/playwright.config.ts",
    "format": "biome check --write --unsafe",
    "lint": "biome check",
    "test": "cross-env NODE_OPTIONS=--max_old_space_size=4096 vitest run",
    "test:watch": "cross-env NODE_OPTIONS=--max_old_space_size=4096 vitest watch"
  },
  "simple-git-hooks": {
    "pre-commit": "npx nano-staged"
  },
  "nano-staged": {
    "*.{json,css,less,scss}": "biome check --write",
    "*.{js,jsx,ts,tsx,mjs,cjs}": "biome check --write",
    "**/package.json": [
      "sort-package-json",
      "biome check --write"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "bumpp": "^10.3.2",
    "check-dependency-version-consistency": "^5.0.1",
    "cross-env": "^10.1.0",
    "jiti": "^2.6.1",
    "nano-staged": "^0.9.0",
    "path-serializer": "^0.5.1",
    "simple-git-hooks": "^2.13.1",
    "sort-package-json": "^2.15.1",
    "ts-dedent": "^2.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@10.14.0"
}
