{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": false,
    "jsx": "preserve",
    "types": ["node"],
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": ["src", "shared", "config", "modern.config.ts", ".storybook/**/*"],
  "exclude": ["**/node_modules"]
}
