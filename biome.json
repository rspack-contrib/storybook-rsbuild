{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "assist": {
    "includes": ["**", "!**/*.vue"],
    "actions": { "source": { "organizeImports": "on" } }
  },
  "vcs": {
    "enabled": true,
    "defaultBranch": "main",
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true
  },
  "formatter": {
    "indentStyle": "space",
    "includes": ["**", "!**/*.vue"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    },
    "jsxRuntime": "reactClassic"
  },
  "css": {
    "formatter": {
      "enabled": true
    }
  },
  "linter": {
    "enabled": true,
    "includes": ["**", "!scripts/**", "!**/*.vue"],
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": false
      },
      "correctness": {
        "noUnusedImports": "warn",
        "noUnusedFunctionParameters": "warn",
        "noUndeclaredDependencies": "off",
        "noUnusedVariables": {
          "level": "warn",
          "options": {
            "ignoreRestSiblings": true
          }
        }
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noConfusingVoidType": "off",
        "noAssignInExpressions": "off",
        "noImplicitAnyLet": "off"
      },
      "complexity": {
        "useOptionalChain": "off",
        "useLiteralKeys": "warn",
        "noUselessUndefinedInitialization": "warn",
        "noUselessFragments": "warn"
      },
      "performance": {
        "noDelete": "off"
      }
    }
  }
}
